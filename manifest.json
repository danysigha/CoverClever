{
  "manifest_version": 3,
  "name": "Chat with JSON",
  "version": "1.0",
  "description": "Ask contextual questions about a JSON file using an LLM.",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  }
}
